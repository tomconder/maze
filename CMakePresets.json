{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "description": "For more information: https://aka.ms/cmakepresetsvs",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "environment": {
        "VCPKG_FEATURE_FLAGS": "manifests,versions,binarycaching,registries"
      },
      "cacheVariables": {
        "ENABLE_IMGUI": "OFF",
        "ENABLE_PROFILING": "OFF"
      }
    },
    {
      "name": "sccache-env",
      "description": "Sets env for sccache",
      "hidden": true,
      "environment": {
        "CMAKE_C_COMPILER_LAUNCHER": "sccache",
        "CMAKE_CXX_COMPILER_LAUNCHER": "sccache"
      }
    },
    {
      "name": "ninja",
      "description": "build using Ninja generator",
      "hidden": true,
      "generator": "Ninja"
    },
    {
      "name": "ci-ninja",
      "hidden": true,
      "description": "build using Ninja generator",
      "inherits": [
        "ninja",
        "sccache-env"
      ]
    },
    {
      "name": "base-windows",
      "hidden": true,
      "displayName": "Windows x64",
      "description": "Sets x64 arch",
      "inherits": "base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows-static-md"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "ci-windows-debug",
      "displayName": "CI - Windows x64 - Debug",
      "description": "Sets debug build type and x64 arch, and uses sccache",
      "inherits": [
        "base-windows",
        "ci-ninja"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_IMGUI": "ON"
      }
    },
    {
      "name": "ci-windows-release",
      "displayName": "CI - Windows x64 - Release",
      "description": "Sets release build type and x64 arch, and uses sccache",
      "inherits": "ci-windows-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "ENABLE_IMGUI": "OFF"
      }
    },
    {
      "name": "windows-debug",
      "hidden": true,
      "displayName": "Windows x64 - Debug",
      "description": "Sets debug build type and x64 arch",
      "inherits": [
        "base-windows",
        "ninja"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_IMGUI": "ON"
      }
    },
    {
      "name": "windows-release",
      "hidden": true,
      "displayName": "Windows x64 - Release",
      "description": "Sets release build type",
      "inherits": "windows-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "ENABLE_IMGUI": "OFF"
      }
    },
    {
      "name": "windows-msvc-debug",
      "displayName": "VSCode - Windows x64 - Debug",
      "description": "Sets debug build type and x64 arch",
      "inherits": "base-windows",
      "generator": "Visual Studio 17 2022",
      "toolset": "host=x64",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_IMGUI": "ON"
      }
    },
    {
      "name": "windows-msvc-release",
      "displayName": "VSCode - Windows x64 - Release",
      "description": "Sets release build type",
      "inherits": "windows-msvc-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "ENABLE_IMGUI": "OFF"
      }
    },
    {
      "name": "base-osx",
      "description": "Mac OSX arch",
      "hidden": true,
      "inherits": "base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "ci-osx-debug",
      "displayName": "Mac OS X - Debug",
      "description": "Sets debug build type and mac arch, and uses sccache",
      "inherits": [
        "base-osx",
        "ci-ninja"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_IMGUI": "ON"
      }
    },
    {
      "name": "ci-osx-release",
      "displayName": "Mac OS X - Release",
      "description": "Sets release build type and uses sccache",
      "inherits": "ci-osx-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "ENABLE_IMGUI": "OFF"
      }
    },
    {
      "name": "osx-debug",
      "displayName": "Mac OS X - Debug",
      "description": "Sets debug build type and mac arch",
      "inherits": [
        "base-osx",
        "ninja"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_IMGUI": "ON"
      }
    },
    {
      "name": "osx-release",
      "displayName": "Mac OS X - Release",
      "description": "Sets release build type",
      "inherits": "osx-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "ENABLE_IMGUI": "OFF"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-windows",
      "displayName": "build windows ninja",
      "configurePreset": "ci-windows-release",
      "description": "Build windows"
    },
    {
      "name": "build-windows-msvc",
      "displayName": "build windows msvc",
      "configurePreset": "windows-msvc-release",
      "description": "Build windows (MSVC)"
    },
    {
      "name": "build-osx",
      "displayName": "build osx",
      "configurePreset": "ci-osx-release",
      "description": "Build osx"
    }
  ],
  "testPresets": [
    {
      "name": "windows",
      "configurePreset": "windows-release"
    },
    {
      "name": "osx",
      "configurePreset": "osx-release"
    }
  ]
}
