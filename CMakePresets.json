{
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 24,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "hidden": true,
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}"
        },
        {
            "name": "debug",
            "description": "Sets debug build type",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CONFIGURATION_TYPES": "Debug"
            }
        },
        {
            "name": "release",
            "description": "Sets release build type",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CONFIGURATION_TYPES": "Release"
            }
        },
        {
            "name": "compile-commands-json",
            "description": "Generate compile_commands.json to help work with clang based tools",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "imgui",
            "description": "Enable imgui",
            "hidden": true,
            "cacheVariables": {
                "ENABLE_IMGUI": "ON"
            }
        },
        {
            "name": "ninja",
            "description": "Build using Ninja generator",
            "hidden": true,
            "generator": "Ninja",
            "inherits": ["compile-commands-json"]
        },
        {
            "name": "profile",
            "description": "Enable profiling with Tracy",
            "hidden": true,
            "cacheVariables": {
                "ENABLE_PROFILING": "ON"
            }
        },
        {
            "name": "vcpkg",
            "hidden": true,
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "environment": {
                "VCPKG_FEATURE_FLAGS": "manifests,versions,binarycaching,registries"
            }
        },
        {
            "name": "sccache",
            "description": "Sets env for sccache",
            "hidden": true,
            "environment": {
                "CMAKE_C_COMPILER_LAUNCHER": "sccache",
                "CMAKE_CXX_COMPILER_LAUNCHER": "sccache"
            }
        },
        {
            "name": "host-windows",
            "displayName": "Host OS - Windows",
            "description": "Specifies Windows host condition for configure preset",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "host-mac",
            "displayName": "Host OS - Mac",
            "description": "Specifies Mac host condition for configure preset",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "host-linux",
            "displayName": "Host OS - Linux",
            "description": "Specifies Linux host condition for configure preset",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "base-windows",
            "description": "Windows settings",
            "hidden": true,
            "inherits": ["default", "host-windows"],
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "toolset": {
                "value": "host=x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-windows-static-md"
            }
        },
        {
            "name": "ci-windows-debug",
            "displayName": "CI - Windows x64 - Debug",
            "description": "Sets debug build type and x64 arch, and uses sccache",
            "inherits": ["base-windows", "debug", "imgui", "ninja", "sccache", "vcpkg"]
        },
        {
            "name": "ci-windows-release",
            "displayName": "CI - Windows x64 - Release",
            "description": "Sets release build type and x64 arch, and uses sccache",
            "inherits": ["base-windows", "ninja", "release", "sccache", "vcpkg"]
        },
        {
            "name": "windows-msvc-debug",
            "displayName": "VSCode - Windows x64 - Debug",
            "description": "Sets debug build type and x64 arch",
            "inherits": ["base-windows", "debug", "imgui", "ninja", "vcpkg"]
        },
        {
            "name": "windows-msvc-release",
            "displayName": "VSCode - Windows x64 - Release",
            "description": "Sets release build type",
            "inherits": ["base-windows", "ninja", "release", "vcpkg"]
        },
        {
            "name": "base-osx",
            "description": "Mac OSX arch",
            "hidden": true,
            "inherits": ["default", "host-mac"],
            "architecture": {
                "value": "x64",
                "strategy": "external"
            }
        },
        {
            "name": "ci-osx-debug",
            "displayName": "Mac OS X - Debug",
            "description": "Sets debug build type and mac arch, and uses sccache",
            "inherits": ["base-osx", "debug", "imgui", "ninja", "sccache", "vcpkg"]
        },
        {
            "name": "ci-osx-release",
            "displayName": "Mac OS X - Release",
            "description": "Sets release build type and uses sccache",
            "inherits": ["base-osx", "ninja", "release", "sccache", "vcpkg"]
        },
        {
            "name": "base-linux",
            "description": "Linux arch",
            "hidden": true,
            "inherits": ["default", "host-linux"],
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            },
            "vendor": {
                "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
                    "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}",
                    "copyAdditionalIncludeDirectoriesList": ["$env{HOME}/.vs/maze-actions/out/build/linux-debug/vcpkg_installed/x64-linux/include"]
                }
            }
        },
        {
            "name": "ci-linux-debug",
            "displayName": "Linux - Debug",
            "description": "Sets debug build type and linux arch, and uses sccache",
            "inherits": ["base-linux", "debug", "imgui", "ninja", "sccache", "vcpkg"]
        },
        {
            "name": "ci-linux-release",
            "displayName": "Linux - Release",
            "description": "Sets release build type and linux arch",
            "inherits": ["base-linux", "ninja", "release", "sccache", "vcpkg"]
        }
    ],
    "buildPresets": [
        {
            "name": "windows-release",
            "displayName": "Windows",
            "configurePreset": "ci-windows-release"
        },
        {
            "name": "osx-release",
            "displayName": "Mac",
            "configurePreset": "ci-osx-release"
        },
        {
            "name": "linux-release",
            "displayName": "Linux",
            "configurePreset": "ci-linux-release"
        }
    ],
    "testPresets": [
        {
            "name": "windows",
            "configurePreset": "ci-windows-release"
        },
        {
            "name": "osx",
            "configurePreset": "ci-osx-release"
        },
        {
            "name": "linux",
            "configurePreset": "ci-linux-release"
        }
    ]
}
