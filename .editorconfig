root = true

[*]
charset = utf-8

[CMakeLists.*]
indent_size = 4
indent_style = space

[{*.h,*.cpp}]
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_size = 2
indent_style = space

[*.sh]
indent_size = 2
indent_style = space
shell_variant = bash
switch_case_indent = true